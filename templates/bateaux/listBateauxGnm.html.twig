{% extends 'baseGNM.html.twig' %}
{% block body %}

	<div class="page-wrapper">
		<div class="container-fluid" id="container-wrapper">
			<div class="row mt-3">
				<div class="col-lg-12">
					<div class="card mb-4">
						<div class="table-responsive p-3">
							<div id="geniustable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
								<div class="row">
									<div class="col-sm-12">
										<table id="geniustable" class="table table-hover dt-responsive dataTable no-footer dtr-inline" cellspacing="0" width="100%" role="grid" aria-describedby="geniustable_info" style="width: 100%;">
											<thead>
												<tr>
													<th>Id</th>
													<th>Mat</th>
													<th>Port</th>
													<th>Type</th>
													<th>Numserie</th>
													<th>actions</th>
												</tr>
											</thead>
											<tbody>
												{% for bateaux in bateauxes %}
													<tr>
														<td>{{ bateaux.id }}</td>
														<td>{{ bateaux.Mat }}</td>
														<td>{{ bateaux.port }}</td>
														<td>{{ bateaux.type }}</td>
														<td>{{ bateaux.numserie }}</td>
														<td>
															<a href="{{ path('app_BateauxGNM_show', {'id': bateaux.id}) }}" class="btn btn-info btn-sm px-3">
																<i class="fa-sharp fa-regular fa-eye"></i>
															</a>

														</td>
													</tr>
												{% else %}
													<tr>
														<td colspan="11">no records found</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>
									</div>

								</div>
							</div>
						</div>
					</div>
				</div>


			</div>

		{% endblock %}
