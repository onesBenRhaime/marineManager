{% extends 'baseAgentMer.html.twig' %}

{% block body %}

	{# <div class="example-wrapper"> #}

	<div class="page-wrapper">

		<div class="container-xl">

			<div class="page-header d-print-none"></div>
		</div>
		<div class="page-body">
			<div class="container-xl"></br>
		</br>
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h3 class="card-title">Support Tickets
						</h3>
					</div>


					<div class="table-responsive">
						<table class="table card-table table-vcenter table-mobile-md text-nowrap datatable">
							<thead>
								<tr>
									<th>Id</th>
									<th>Description</th>
									<th>EmailAgent</th>
									<th>actions</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								{% for reclamation in reclamations %}
									<tr>
										<td>{{ reclamation.id }}</td>
										<td>{{ reclamation.description }}</td>
										<td>{{ reclamation.emailAgent }}</td>
										<td>
											<form method="post" action="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

												<a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-info btn-sm px-3">
													<i class="fa-sharp fa-regular fa-eye"></i>
												</a>
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
												<button class="btn text-danger">
													<i class="fa-regular fa-square-minus"></i>
												</button>
											</form>
										</td>
										<td></td>
									</tr>
								{% else %}
									<tr>
										<td colspan="4">no records found</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>

				</div>
			</div>
		</div>

	</div>
</div></div>{# </div> #}{% endblock %}
