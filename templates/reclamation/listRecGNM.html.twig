{% extends 'baseGNM.html.twig' %}
{% block body %}

	<div class="page-wrapper">
		<div class="container-fluid" id="container-wrapper">
			<div class="row mt-3">
				<div class="col-lg-12">
					<div class="card mb-4">
						<div class="table-responsive p-3">
							<div id="geniustable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
								<div class="row">
									<div class="col-sm-12">
										<div class="table-responsive">
											<table class="table card-table table-vcenter table-mobile-md text-nowrap datatable">
												<thead>
													<tr>
														<th>Id</th>
														<th>Description</th>
														<th>EmailAgent</th>

														<th></th>
													</tr>
												</thead>
												<tbody>
													{% for reclamation in reclamations %}
														<tr>
															<td>{{ reclamation.id }}</td>
															<td>{{ reclamation.description }}</td>
															<td>{{ reclamation.emailAgent }}</td>

															<td></td>
														</tr>
													{% else %}
														<tr>
															<td colspan="4">no records found</td>
														</tr>
													{% endfor %}
												</tbody>
											</table>
										</div>

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>


			</div>
		</div>
	</div>
{% endblock %}
