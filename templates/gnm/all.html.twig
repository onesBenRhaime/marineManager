{% extends 'baseAdmin.html.twig' %}
{% block title %}Admin marine manager
{% endblock %}

{% block body %}
	<div class="page-wrapper">
		<div class="container-fluid" id="container-wrapper">
			<div class="card">
				<div class="d-sm-flex align-items-center justify-content-between">
					<h5 class=" mb-0 text-gray-800 pl-3">Garde National
					</h5>
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="">Dashboard</a>
						</li>
						<li class="breadcrumb-item">
							<a href="">Garde National</a>
						</li>
					</ol>
				</div>
			</div>

			<div class="row mt-3">
				<div class="col-lg-12">
					<div class="card mb-4">
						<div class="table-responsive p-3">
							<div id="geniustable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
								<div class="row btn-area"></div>
								<div class="row">
									<div class="col-sm-12">
										<table id="geniustable" class="table table-hover dt-responsive dataTable no-footer dtr-inline" cellspacing="0" width="100%" role="grid" aria-describedby="geniustable_info" style="width: 100%;">

											<thead>
												<tr>
													<th>Id</th>
													<th>NOM</th>
													<th>PRENOM</th>
													<th>EMAIL</th>
													<th>ACTIONS</th>
												</tr>
											</thead>

											<tbody>
												{% for gnm in gnms %}
													<tr>
														<td>{{ gnm.id }}</td>
														<td>{{ gnm.nom }}</td>
														<td>{{ gnm.prenom }}</td>
														<td>{{ gnm.email }}</td>
														<td>
															<form method="post" action="{{ path('app_gnm_delete', {'id': gnm.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
																<a href="{{ path('app_gnm_show', {'id': gnm.id}) }}" class="btn btn-info">
																	<i class="fa-sharp fa-regular fa-eye"></i>
																</a>
																<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gnm.id) }}">
																<button class="btn btn-danger">
																	<i class="fa-solid fa-trash"></i>
																</button>
															</td>
														</td>
													</tr>
												</form>
											</tbody>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="8">no records found</td>
									</tr>
								{% endfor %}

							</tbody>
						</table>

					</div>

				</div>
			</div>
		</div>
	</div>
</div></div></div></div>{% endblock %}
